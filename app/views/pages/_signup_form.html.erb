<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= f.error_notification %>

  <div class="form-inputs">
    <div class="form-group">
      <%= f.input :email, required: true, autofocus: true, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.input :password, class:"form-control", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    </div>
    <div class="form-group">
      <%= f.input :password_confirmation, required: true, class:"form-control" %>
    </div>
    <div class="modal-footer">
      <ul class="text-center list-inline">
        <li >
          <div class="form-actions btn-block" style="margin-right:20px" >
            <%= f.button :submit, "Sign up" %>
          </div>
        </li>
        <li>
          <%= link_to user_facebook_omniauth_authorize_path(:facebook) do %>
            <div class=" btn btn-default btn-social btn-facebook">
              <i class="fa fa-facebook"></i>Sign up with Facebook
            </div>
          <% end %>
        </li>
      </ul>
  </div>
  </div>

<% end %>
