<%= simple_form_for(:user, url: user_session_path) do |f| %>
<%= f.error_notification %>

  <div class="form-inputs">
    <div class="form-group">
      <%= f.input :email, required: false, class:"form-control", autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.input :password, class:"form-control", required: false %>
    </div>
    <div class="form-group">
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="modal-footer">
      <ul class="text-center list-inline">
        <li >
          <div class="form-actions btn-block" style="margin-right:20px" >
            <%= f.button :submit, "Login" %>
          </div>
        </li>
        <li>
          <%= link_to user_facebook_omniauth_authorize_path(:facebook) do %>
            <div class=" btn btn-default btn-social btn-facebook">
              <i class="fa fa-facebook"></i>Login with Facebook
            </div>
          <% end %>
        </li>
      </ul>
  </div>
  </div>

<% end %>
